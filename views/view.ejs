<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Entries</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #3f51b5;
            padding: 15px;
            color: white;
            text-align: center;
        }
        h1 {
            margin: 0;
        }
        .container {
            width: 80%;
            margin: 20px auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #3f51b5;
            color: white;
        }
        button {
            padding: 8px 16px;
            color: white;
            border: none;
            cursor: pointer;
            background-color: #f44336;
            border-radius: 4px;
            font-size: 14px;
        }
        button:hover {
            background-color: #d32f2f;
        }
        .action-btns {
            display: flex;
            gap: 10px;
        }
        a {
            text-decoration: none;
            color: white;
            padding: 10px 20px;
            background-color: #4caf50;
            border-radius: 5px;
            font-size: 16px;
        }
        a:hover {
            background-color: #388e3c;
        }
        .alert {
            padding: 10px;
            margin: 20px 0;
            background-color: #4caf50;
            color: white;
            text-align: center;
            border-radius: 4px;
        }
    </style>
</head>
<body>

<header>
    <h1>View Entries</h1>
</header>

<div class="container">
    <% if (deleted === 'true') { %>
        <div class="alert">Entry deleted successfully!</div>
    <% } %>
    
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Entry</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% entries.forEach(function(entry) { %>
                <tr>
                    <td><%= entry.id %></td>
                    <td><%= entry.entry %></td>
                    <td><%= entry.created_at %></td>
                    <td class="action-btns">
                        <a href="/update/<%= entry.id %>">Update</a>
                        <form action="/delete/<%= entry.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <br>
    <a href="/create">Add New Entry</a>
</div>

</body>
</html>
